{
    "hyprland/workspaces" : {
        "on-scroll-up": "hyprctl dispatch workspace r-1",
        "on-scroll-down": "hyprctl dispatch workspace r+1",        
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": ""
        },
        "persistent-workspaces": {
            "*": 1
        }       
    },

    "custom/empty": {
        "format": ""
    },

    "clock": {
        "format": "{:%H:%M %a}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },

    "network": {
        "format": "{ifname}",
        "format-wifi": "Ôá´ ",
        "format-ethernet": " Ôûñ ",
        "format-disconnected": "Disconnected",
        "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
        "tooltip-format-wifi": "Ôá´  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
        "tooltip-format-ethernet": "Ôûñ {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "alacritty --class dotfiles-floating -e nmtui",
        "on-click-right": "~/dotfiles/.settings/networkmanager.sh"
    },

    "battery": {
        "states": {
            "warning": 25,
            "critical": 15
        },
        "format": "{icon}{capacity}%",
        "format-charging": "ÔâÄ {capacity}%",
        "format-plugged": "ÔâÄ {capacity}%",
        "format-alt": "{icon}{time}",
        "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "]
    },
    "custom/power": {
    "format": "‚èª",
    "tooltip": "Power Menu",
    "on-click": "~/.config/waybar/script/wofi-power-menu.sh"
    },
    "pulseaudio": {

        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "ÔÑ± {icon}Ôäî {format_source}",
        "format-muted": "ÔÑ±",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ• ",
            "hands-free": "Ôñê ",
            "headset": "ÔÄ• ",
            "phone": "ÔÇï ",
            "portable": "ÔÇï ",
            "car": "ÔÜπ ",
            "default": ["ÔÄ¶ ", "ÔÄ® ", "ÔÄ® "]
        },
        "on-click": "pavucontrol"
    },
    "custom/bluetooth": {
        "exec": "~/.config/waybar/script/bluetooth-status.sh",
        "interval": 1,
        "format": " {}",
        "on-click": "blueman-manager",
        "tooltip": false
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["ÔÜÖ", "ÔÜÖ", "ÔÜÖ", "ÔÜÖ"],
        "on-scroll-up": "brightnessctl set +5%",
        "on-scroll-down": "brightnessctl set 5%-",
        "on-click": "brightnessctl set 100%",
        "on-click-right": "brightnessctl set 30%"
    },
    "custom/locale": {
        "exec": "hyprctl getoption input:kb_layout -j | jq -r '.str' | tr 'a-z' 'A-Z'",
        "interval": 1,
        "format": "üåê {}",
        "tooltip": "Current Locale (click to change)",
        "on-click": "~/.config/waybar/script/locale-switcher.sh switch"
    }
}
