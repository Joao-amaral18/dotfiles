{
    // General Settings
    "position": "top",
    "layer": "top",
    "margin-bottom": 5,
    "margin-left": 0,
    "margin-right": 0,
    "margin-top":0,    
    "spacing": 5,

    // Load Modules
    "include": [
        "~/.config/waybar/modules/modules.json"
    ],

    // Modules Left
    "modules-left": [
        "hyprland/workspaces",
    ],

    // Modules Center
    "modules-center": [
        "network",
        "clock",
        "battery",
    ],
    
    // Modules Right    
    "modules-right": [
        "backlight",
        "pulseaudio",
        "custom/bluetooth",
        "custom/locale",
        "custom/power",
    ]
}
